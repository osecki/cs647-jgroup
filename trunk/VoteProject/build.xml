<?xml version="1.0" encoding="ISO-8859-1"?>


<project default='run' basedir='.'>

	<path id="lib.path">
	  <fileset dir="lib" includes="*.jar" />
	  </path>


  <target name="run" depends='compile'>
    <java classpathref="lib.path" classpath="./bin" classname='VoteClient' fork="true"/>
  </target>

   <target name="compile" depends='vote'/>

  <target name="vote">
    <javac classpathref="lib.path" srcdir='./src' includes="*.java" />
  </target>

  <target name="clean">
    <delete>
			<fileset dir="./">
				<include name='*.class' />
			</fileset>
		</delete>
  </target>
</project>

